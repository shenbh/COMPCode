<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white"
    android:orientation="vertical"
    android:padding="10dp" >

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content" >

        <TextView
            android:id="@+id/pro_name"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:gravity="center|left"
            android:singleLine="true"
            android:text="工作业绩业绩积分年度"
            android:textSize="16sp" />

        <TextView
            android:id="@+id/pro_time"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:gravity="center|left"
            android:singleLine="true"
            android:text="2014/10/7"   android:layout_marginLeft="10dp"
            android:textColor="@color/app_green" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content" >

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="1" >

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="项目级别" />

            <TextView
                android:id="@+id/pro_level"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:gravity="center|left"
                android:singleLine="true"
                android:layout_marginLeft="3dp"
                android:text="xxxxxxx"
                android:textColor="@color/app_green" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="1" >

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="项目分值" />

            <TextView
                android:id="@+id/pro_value"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:gravity="center|left"
                android:singleLine="true"   android:layout_marginLeft="3dp"
                android:text="xxxxxxx"
                android:textColor="@color/app_green" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="1" >

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="倍数" />

            <TextView
                android:id="@+id/pro_multiple"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:gravity="center|left"
                android:singleLine="true"   android:layout_marginLeft="3dp"
                android:text="xxxxxxx"
                android:textColor="@color/app_green" />
        </LinearLayout>
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content" >

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="积分分值" />

        <TextView
            android:id="@+id/pro_num"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center|left"
            android:singleLine="true"   android:layout_marginLeft="3dp"
            android:text="xxxxxxx"
            android:textColor="@color/app_green" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content" >

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="积分来源" />

        <TextView
            android:id="@+id/pro_from"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center|left"   android:layout_marginLeft="3dp"
            android:text="xxxxxxx"
            android:textColor="@color/app_green" />
    </LinearLayout>

    <ImageView
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:layout_marginLeft="10dp"
        android:layout_marginRight="10dp"
        android:background="@color/app_gray_drak" />

</LinearLayout>