<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical" >

   <!--  <include layout="@layout/loading_layout" /> -->

    <include layout="@layout/title_head2" />

    <LinearLayout
        android:id="@+id/hor_lin"
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:background="@color/app_viewpager_head"
        android:gravity="center"
        android:orientation="horizontal" >

        <LinearLayout
            android:id="@+id/ll_overtime_statistics"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_marginLeft="20dp"
            android:layout_weight="1"
            android:background="@color/transparent"
            android:gravity="center"
            android:onClick="onClick"
            android:orientation="vertical" >

            <TextView
                android:id="@+id/tv_overtime_statistics"
                android:layout_width="wrap_content"
                android:layout_height="38dp"
                android:gravity="center"
                android:text="加班统计"
                android:textColor="@color/gray"
                android:textSize="13sp" />

            <ImageView
                android:id="@+id/iv_overtime_statistics"
                android:layout_width="match_parent"
                android:layout_height="2dp"
                android:layout_alignParentBottom="true"
                
                android:src="@color/app_green" />
        </LinearLayout>

        <LinearLayout
            android:id="@+id/ll_leave_statistics"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_marginLeft="20dp"
            android:layout_weight="1"
            android:background="@color/transparent"
            android:gravity="center"
            android:onClick="onClick"
            android:orientation="vertical" >

            <TextView
                android:id="@+id/tv_leave_statistics"
                android:layout_width="wrap_content"
                android:layout_height="38dp"
                android:gravity="center"
                android:text="请假统计"
                android:textColor="@color/gray"
                android:textSize="13sp" />

            <ImageView
                android:id="@+id/iv_leave_statistics"
                android:layout_width="match_parent"
                android:layout_height="2dp"
                android:layout_alignParentBottom="true"
                android:src="@color/app_green" />
        </LinearLayout>

        <LinearLayout
            android:id="@+id/ll_attendance_statistics"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_marginLeft="20dp"
            android:layout_weight="1"
            android:background="@color/transparent"
            android:gravity="center"
            android:onClick="onClick"
            android:orientation="vertical" >

            <TextView
                android:id="@+id/tv_attendance_statistics"
                android:layout_width="wrap_content"
                android:layout_height="38dp"
                android:gravity="center"
                android:text="考勤过失"
                android:textColor="@color/gray"
                android:textSize="13sp" />

            <ImageView
                android:id="@+id/iv_attendance_statistics"
                android:layout_width="match_parent"
                android:layout_height="2dp"
                android:layout_alignParentBottom="true"
                android:src="@color/app_green" />
        </LinearLayout>

        <LinearLayout
            android:id="@+id/ll_attendance_filing"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_marginLeft="20dp"
            android:layout_marginRight="20dp"
            android:layout_weight="1"
            android:background="@color/transparent"
            android:gravity="center"
            android:onClick="onClick"
            android:orientation="vertical" >

            <TextView
                android:id="@+id/tv_attendance_filing"
                android:layout_width="wrap_content"
                android:layout_height="38dp"
                android:gravity="center"
                android:text="考勤报备"
                android:textColor="@color/gray"
                android:textSize="13sp" />

            <ImageView
                android:id="@+id/iv_attendance_filing"
                android:layout_width="match_parent"
                android:layout_height="2dp"
                android:layout_alignParentBottom="true"
                android:src="@color/app_green" />
        </LinearLayout>
    </LinearLayout>

    <include layout="@layout/line_nopadding" />


<!--     <ImageView -->
<!--         android:layout_width="match_parent" -->
<!--         android:layout_height="1dp" -->
<!--         android:layout_marginTop="10dp" -->
<!--         android:background="@color/app_gray_drak2" /> -->

    <android.support.v4.view.ViewPager
        android:id="@+id/mViewPager"
        android:layout_width="match_parent"
        android:layout_height="match_parent" />

    <include layout="@layout/line" />

</LinearLayout>